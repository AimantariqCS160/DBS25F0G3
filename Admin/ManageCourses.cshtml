@{
    ViewData["Title"] = "Manage Courses";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Admin - Manage Courses</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            background-color: #f4f9ff;
            margin: 0;
        }

        header {
            background-color: #203a72;
            color: white;
            padding: 25px 30px;
            font-size: 24px;
            text-align: center;
            font-weight: bold;
        }

        .container {
            max-width: 1100px;
            margin: 40px auto;
            background: #fff;
            padding: 25px 30px;
            border-radius: 12px;
            box-shadow: 0 6px 18px rgba(0, 0, 0, 0.1);
        }

        .top-bar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 25px;
            flex-wrap: wrap;
        }

            .top-bar h2 {
                color: #203a72;
                margin-bottom: 10px;
            }

            .top-bar a {
                background-color: #203a72;
                color: #fff;
                text-decoration: none;
                padding: 10px 16px;
                border-radius: 6px;
                font-weight: 500;
            }

        .search-box {
            margin-bottom: 20px;
        }

            .search-box input {
                width: 100%;
                max-width: 300px;
                padding: 10px 12px;
                border: 1px solid #ccc;
                border-radius: 6px;
                font-size: 16px;
            }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 10px;
        }

        th {
            padding: 14px;
            background-color: #203a72;
            color: white;
            text-align: left;
        }
    </style>
</head>
<body>

    <header>Admin Dashboard - Manage Courses</header>

    <div class="container">

        <div class="top-bar">
            <h2>Courses List</h2>
            <a asp-controller="Admin" asp-action="AddCourse"><i class="fas fa-plus"></i> Add Course</a>
        </div>

        <div class="search-box">
            <input type="text" id="searchInput" placeholder="Search courses..." />
        </div>

        <table>
            <thead>
                <tr>
                    <th>Course Code</th>
                    <th>Course Title</th>
                    <th>Credit Hours</th>
                    <th>Semester</th>
                    <th>Department</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <!-- Data rows will be populated from DB -->
            </tbody>
        </table>

    </div>

</body>
</html>
